{
  "manifest_version": 3,
  "name": "dev-tolls",
  "version": "0.0.1",
  //=============上面三个为必填==============
  "description": "一个小巧好用的开发者工具集~",
  "author": "荣顶",
  // "background": {
  //   "service_worker": "./script/background.js"
  // },
  "permissions": [
    "activeTab",
    "contextMenus",
    "tabs",
    "notifications",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "./popup/index.html",
    "default_icon": {
      "16": "/public/logo.png",
      "32": "/public/logo.png",
      "48": "/public/logo.png",
      "128": "/public/logo.png"
    }
  },
  "options_ui": {
    "page": "./options/index.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "/public/logo.png",
    "32": "/public/logo.png",
    "48": "/public/logo.png",
    "128": "/public/logo.png"
  },
  "commands": {
    "cmdNew": {
      "suggested_key": {
        "default": "Ctrl+Shift+1"
      },
      "global": true,
      "description": "Create new window"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_end",
      // "all_frames": true,
      // "match_origin_as_fallback": true,
      "js": ["./scripts/content.global.js"]
    }
  ],
  //主页
  "homepage_url": "https://github.com/wangrongding"
}
