{
  "name": "translator",
  "description": "一个小巧好用的翻译插件~",
  "version": "0.0.1",
  "manifest_version": 3,
  "author": "荣顶",
  // "background": {
  //   "service_worker": "./script/background.js"
  // },
  "permissions": [
    "activeTab",
    "contextMenus",
    "tabs",
    "notifications",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "./popup/index.html",
    "default_icon": {
      "16": "/public/logo.png",
      "32": "/public/logo.png",
      "48": "/public/logo.png",
      "128": "/public/logo.png"
    }
  },
  "icons": {
    "16": "/public/logo.png",
    "32": "/public/logo.png",
    "48": "/public/logo.png",
    "128": "/public/logo.png"
  }
  // "options_page": "options.html"
}
