{
  "manifest_version": 3,
  "name": "translator",
  "version": "0.0.1",
  "description": "一个小巧好用的翻译插件~",
  "author": "荣顶",
  "icons": {
    "16": "./public/logo.png",
    "48": "./public/logo.png",
    "128": "./public/logo.png"
  },
  "action": {
    "default_icon": {
      "16": "./public/logo.png",
      "24": "./public/logo.png",
      "32": "./public/logo.png"
    },
    "default_title": "Click Me",
    "default_popup": "popup.html"
  },
  "default_locale": "en",
  "--------------": "=========================================================",
  "background": {
    "scripts": ["./dist/background/index.global.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/jquery-1.8.3.js", "js/content-script.js"],
      "css": ["css/custom.css"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://*/*.png", "*://*/*.jpg", "*://*/*.gif", "*://*/*.bmp"],
      "js": ["js/show-image-content-size.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "contextMenus",
    "tabs",
    "notifications",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_icon": "./public/logo.png",
    "default_title": "帅气的扩展！",
    "default_popup": "./pages/popup/index.html"
  },
  "options_ui": {
    "page": "./dist/options/index.html",
    "open_in_tab": true,
    "chrome_style": false
  },
  "omnibox": { "keyword": "go" },
  "devtools_page": "devtools.html",
  "content_security_policy": "script-src 'self' http://localhost:3303; object-src 'self'"
}
